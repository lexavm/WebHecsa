@model WebHecsa.Models.CatCategoria

@{
    ViewData["Title"] = "Desactivar Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        
        <li class="breadcrumb-item">Información</li>
        <li class="breadcrumb-item">Catálogos</li>
        <li class="breadcrumb-item">Marca</li>
        <li class="breadcrumb-item">Control de Categoria</li>
        <li class="breadcrumb-item active" aria-current="page">Desactivar Categoria</li>
    </ol>
</nav>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaDesc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaDesc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MarcaDesc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MarcaDesc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaRegistro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdEstatusRegistro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdEstatusRegistro)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input style="text-transform:uppercase" type="hidden" asp-for="IdMarca" />
        <input style="text-transform:uppercase" type="submit" value="Desactivar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </form>
</div>
