@model WebHecsa.Models.CatMarca

@{
    ViewData["Title"] = "Editar Marca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        
        <li class="breadcrumb-item">Información</li>
        <li class="breadcrumb-item">Catálogos</li>
        <li class="breadcrumb-item">Marca</li>
        <li class="breadcrumb-item">Control de Marca</li>
        <li class="breadcrumb-item active" aria-current="page">Editar Marca</li>
    </ol>
</nav>
<hr />


<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input  type="hidden" asp-for="IdMarca" id="IdMarca" />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="IdProveedor" class="control-label"></label>
                <select id="idListaProveedor" class="form-select statesSelect" asp-for="IdProveedor" asp-items="@(new SelectList(ViewBag.ListaProveedor,"IdProveedor","NombreProveedor"))">
                    <option value="">SELECCIONAR</option>
                </select>
                <span asp-validation-for="IdProveedor" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="MarcaDesc" class="control-label"></label>
                <input style="text-transform:uppercase" asp-for="MarcaDesc" class="form-control" />
                <span asp-validation-for="MarcaDesc" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="IdEstatusRegistro" class="control-label"></label>
                <select id="idEstatusLista" class="form-select" asp-for="IdEstatusRegistro" asp-items="@(new SelectList(ViewBag.ListaEstatus,"IdEstatusRegistro","EstatusDesc"))">
                    <option value="">SELECCIONAR</option>
                </select>
                <span asp-validation-for="IdEstatusRegistro" class="text-danger"></span>
            </div>
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </div>
</form>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script>
    $(document).ready(function () {
        $(".statesSelect").select2();
    });
</script>
}
