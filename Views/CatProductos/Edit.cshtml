@model WebHecsa.Models.CatProducto

@{
    ViewData["Title"] = "Editar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">

        <li class="breadcrumb-item">Información</li>
        <li class="breadcrumb-item">Catálogos</li>
        <li class="breadcrumb-item">Producto</li>
        <li class="breadcrumb-item">Control de Producto</li>
        <li class="breadcrumb-item active" aria-current="page">Editar Producto</li>
    </ol>
</nav>
<hr />

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdProducto" id="IdMarca" />
    <input type="hidden" asp-for="CodigoInterno" id="IdMarca" />
    <div class="row">
        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="CodigoExterno" class="control-label"></label>
                <input style="text-transform:uppercase" asp-for="CodigoExterno" class="form-control" type="text" />
                <span asp-validation-for="CodigoExterno" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="IdMarca" class="control-label"></label>
                <select id="drpMarcas" class="form-select" asp-for="IdMarca" asp-items="@(new SelectList(ViewBag.ListaMarca,"IdMarca","MarcaDesc"))">
                    <option value="">SELECCIONAR</option>
                </select>
                <span asp-validation-for="IdMarca" class="text-danger"></span>
            </div>

        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="IdCategoria" class="control-label"></label>
                <select id="drpCategorias" class="form-select" asp-for="IdCategoria" asp-items="@(new SelectList(ViewBag.ListaCategoria,"IdCategoria","CategoriaDesc"))">
                    <option value="">SELECCIONAR</option>
                </select>
                <span asp-validation-for="IdCategoria" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="DescProducto" class="control-label"></label>
                <input style="text-transform:uppercase" asp-for="DescProducto" class="form-control" type="text" />
                <span asp-validation-for="DescProducto" class="text-danger"></span>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-1">
            <div class="form-group">
                <label asp-for="CantidadMinima" class="control-label"></label>
                <input asp-for="CantidadMinima" class="form-control" type="number" />
                <span asp-validation-for="CantidadMinima" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-1">
            <div class="form-group">
                <label asp-for="ProductoPrecioUno" class="control-label"></label>
                <input asp-for="ProductoPrecioUno" class="form-control" type="number" />
                <span asp-validation-for="ProductoPrecioUno" class="text-danger"></span>
            </div>
        </div>
@*        <div class="col-md-1">
            <div class="form-group">
                <label asp-for="PorcentajePrecioUno" class="control-label"></label>
                <input asp-for="PorcentajePrecioUno" class="form-control" type="number" value="35" readonly="readonly" />
                <span asp-validation-for="PorcentajePrecioUno" class="text-danger"></span>
            </div>
        </div>*@
        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="IdEstatusRegistro" class="control-label"></label>
                <select id="idEstatusLista" class="form-select" asp-for="IdEstatusRegistro" asp-items="@(new SelectList(ViewBag.ListaEstatus,"IdEstatusRegistro","EstatusDesc"))">
                    <option value="">Seleccionar Estatus</option>
                </select>
                <span asp-validation-for="IdEstatusRegistro" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Actualizar" class="btn btn-warning" />
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </div>
</form>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
