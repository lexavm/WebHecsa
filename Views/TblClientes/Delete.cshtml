        <li class="breadcrumb-item active" aria-current="page">Desactivar Cliente</li>
    </ol>
</nav>
<hr />
<div>
    <h4>TblCliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCliente)
